{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    ".eslintrc.json",
  ],
  "exclude": [
    "node_modules"
  ]
}
